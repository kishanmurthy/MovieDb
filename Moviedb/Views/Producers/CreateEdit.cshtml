@model Moviedb.Models.Producer

@{


    if (Model == null)
    {
        ViewBag.Title = "Create";
        <h2>Create</h2>
    }
    else
    {
        ViewBag.Title = "Edit";
        <h2>Edit</h2>
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_CreateProducer", Model)

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        document.getElementById("submit-producer").type = "submit";
        ProducerForm = document.getElementById("producer-form");
        ProducerForm.action = "/producers/create";
        ProducerForm.method = "POST";
    </script>

}
