@model IEnumerable<Moviedb.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="MovieTable">
    <tr>
        <th>
            Movie Poster
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plot)
        </th>

        <th>
            Producer
        </th>
        <th>
            Actors
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="@item.Id">

            <td>
                @{

                    if (item.MoviePosterPath != "")
                    {
                        <a href="@item.MoviePosterPath"><img src="@item.MoviePosterPath" height="150" /></a>
                    }

                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.Name)
            </td>
            <td>
                @{
                    foreach (var actor in item.Actors)
                    {
                        @actor.Name
                        <br />
                    }
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                <a onclick="deleteMovie(@item.Id)" href="#">Delete</a>
            </td>
        </tr>
    }
</table>

<script>
    function deleteMovie(id) {

        var delMovie = confirm("Do you want to delete the movie");

        if (delMovie == true) {
            $.ajax({
                type: "POST",
                url: "/Movies/DeleteAjax",
                data: { id },
                success: function (response) {
                    document.MyResponseDelete = response;
                    console.log("Success");
                    var row = document.getElementById(id);
                    row.parentNode.removeChild(row);
                }
            });
        }
    }
</script>